<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <co.mobiwise.library.ProgressLayout
        android:id="@+id/progLay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:maxProgress="100"
        app:autoProgress="true"
        app:emptyColor="#152430"/>

    <ImageView
        android:id="@+id/imageviewAction"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:background="@drawable/play"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/img_dovnload"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_download"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/imageviewAction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageviewAction"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vk_white"
            android:text="Музлоголик"/>

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c8ffffff"
            android:text="Tural Walker"
            android:layout_below="@+id/title"
            android:layout_marginTop="4dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#c8ffffff"
        android:text="23:45"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_dovnload"
        android:layout_toStartOf="@+id/img_dovnload" />

</RelativeLayout>