<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shahbazly_dev.makeitlouder.LoginActivity"
    android:background="@color/background_floating_material_dark">

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        fbutton:shadowHeight="7dp"
        fbutton:cornerRadius="8dp"
        fbutton:buttonColor="@color/fbutton_color_pomegranate"
        android:text="@string/authVK"
        android:onClick="authClick"
        android:id="@+id/outhvk_btn"
        android:textColor="@color/vk_white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вали отсюда"
        android:id="@+id/button2"
        android:onClick="logoutClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="500dp"
        android:layout_height="270dp"
        android:background="@drawable/jake_music"
        android:id="@+id/view"
        android:layout_above="@+id/outhvk_btn"
        android:layout_alignLeft="@+id/outhvk_btn"
        android:layout_alignStart="@+id/outhvk_btn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />
</RelativeLayout>
